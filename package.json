{
  "name": "gamepad-navigator",
  "version": "0.1.0",
  "description": "Gamepad-based spatial navigation Chrome extension",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development",
    "watch": "webpack --mode development --watch",
