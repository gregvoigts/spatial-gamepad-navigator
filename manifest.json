{
  "manifest_version": 3,
  "name": "Gamepad Spatial Navigation",
  "version": "0.1.0",
  "description": "Gamepad-based spatial navigation for arbitrary websites",
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gamepad Navigator Settings"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.ico",
    "48": "icons/icon48.ico",
    "128": "icons/icon128.ico"
  }
}
